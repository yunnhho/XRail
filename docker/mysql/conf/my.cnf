[client]
default-character-set=utf8mb4

[mysql]
default-character-set=utf8mb4

[mysqld]
# 문자셋 설정 (이모지 지원)
character-set-server=utf8mb4
collation-server=utf8mb4_unicode_ci
skip-character-set-client-handshake

# [Critical] 대용량 트래픽 대응 설정
max_connections = 1000          # 동시 접속자 수 증가 대비
max_connect_errors = 10000
wait_timeout = 600
interactive_timeout = 600

# InnoDB 성능 튜닝 (메모리 여유에 따라 조절 필요, 여기선 개발용)
innodb_buffer_pool_size = 512M  # 데이터 캐싱 영역
innodb_log_file_size = 128M
innodb_flush_log_at_trx_commit = 1 # ACID 보장 (성능<데이터무결성)
innodb_lock_wait_timeout = 50   # 락 대기 시간

# 로그 설정
general_log = 0                 # 성능 위해 끔
slow_query_log = 1              # 느린 쿼리 추적
long_query_time = 3